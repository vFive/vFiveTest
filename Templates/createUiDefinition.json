{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "vmName",
        "type": "Microsoft.Common.TextBox",
        "label": "VM name",
        "toolTip": "VM name for vFive manager.",
        "osPlatform": "Windows",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "computerName",
        "type": "Microsoft.Common.TextBox",
        "label": "Computer name",
        "toolTip": "The VM's computer name.",
        "osPlatform": "Windows",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Username",
        "toolTip": "Admin username for the virtual machines.",
        "osPlatform": "Windows",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "adminPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": {
          "password": "Admin password for the virtual machines."
        },
        "osPlatform": "Windows",
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": true
        }
      }
    ],
    "steps": [
      {
        "name": "vmSize",
        "label": "Size",
        "subLabel": {
          "preValidation": "Choose virtual machine size",
          "postValidation": "Done"
        },
        "bladeTitle": "Size",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size.",
            "toolTip": "The size of the virtual machine.",
            "recommendedSizes": [
              "Standard_D1",
              "Standard_D2",
              "Standard_D3"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A7",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_DS1",
                "Standard_DS2",
                "Standard_DS3",
                "Standard_DS4",
                "Standard_DS13",
                "Standard_DS14"
              ]
            },
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2012-R2-Datacenter"
            },
            "count": 1
          }
        ]
      },
      {
        "name": "vmSettings",
        "label": "VM Settings",
        "subLabel": {
          "preValidation": "Configure VM settings",
          "postValidation": "Done"
        },
        "bladeTitle": "VM Settings",
        "elements": [
          {
            "name": "storage",
            "type": "Microsoft.Common.Section",
            "label": "Storage",
            "elements": [
              {
                "name": "diskType",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Disk type",
                "defaultValue": "Standard",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "Standard",
                      "value": "Standard"
                    },
                    {
                      "label": "Preminum (SSD)",
                      "value": "Preminum"
                    }
                  ]
                }
              },
              {
                "name": "storageAccount",
                "type": "Microsoft.Storage.StorageAccountSelector",
                "label": "Storage account",
                "toolTip": "Disk for Azure virtual machines are created in storage accounts.",
                "defaultValue": {
                  "type": "Standard_LRS"
                },
                "constraints": {
                  "required": true
                }
              }
            ]
          },
          {
            "name": "network",
            "type": "Microsoft.Common.Section",
            "label": "Network",
            "elements": [
              {
                "name": "virtualNetworkName",
                "type": "Microsoft.Common.TextBox",
                "label": "Virtual Network name",
                "toolTip": "Name of the virtual network to be created",
                "defaultValue": "vFiveVNet",
                "constraints": {
                  "required": true,
                  "regex": "^[a-z0-9A-Z]{1,10}$",
                  "validationMessage": "Only letters and numbers are allowed, and the value must be 1-10 characters long."
                }
              },
              {
                "name": "publicIP",
                "type": "Microsoft.Network.PublicIpAddressCombo",
                "label": {
                  "publicIpAddress": "Public IP address"
                },
                "toolTip": {
                  "publicIpAddress": "Public IP address for VM."
                },
                "defaultValue": {
                  "publicIpAddressName": "vFivePublicIP"
                },
                "options": {
                  "hideNone": true,
                  "hideDomainNameLabel": false
                },
                "constraints": {
                  "required": {
                    "publicIpAddress": true
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "sqlServerSettings",
        "label": "SQL server settings",
        "subLabel": {
          "preValidation": "Configure the SQL server settings",
          "postValidation": "Done"
        },
        "bladeTitle": "SQL server settings",
        "elements": [

        ]
      },
      {
        "name": "vFiveSettings",
        "label": "vFive settings",
        "subLabel": {
          "preValidation": "Configure the vFive settings",
          "postValidation": "Done"
        },
        "bladeTitle": "vFive settings",
        "elements": [
          {
            "name": "appPoolUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Application pool username.",
            "osPlatform": "Windows",
            "constraints": {
              "required": false
            }
          },
          {
            "name": "appPoolPassword",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "password": "Application pool user password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": {
              "password": "Application pool user password."
            },
            "osPlatform": "Windows",
            "constraints": {
              "required": false
            },
            "options": {
              "hideConfirmation": true
            }
          },
          {
            "name": "appPoolPort",
            "type": "Microsoft.Common.TextBox",
            "label": "Application pool port",
            "defaultValue": "15001",
            "toolTip": "Application pool port.",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "controlDBName",
            "type": "Microsoft.Common.TextBox",
            "label": "Control database name",
            "defaultValue": "15001",
            "toolTip": "Control database name.",
            "constraints": {
              "required": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "location": "[location()]",
      "adminUsername": "[steps('basics').adminUsername]",
      "adminPassword": "[steps('basics').adminPassword]"
      
    }
  }
}
